@model List<Claim>

@{
    ViewData["Title"] = "Final Approval";
}

<h2>Final Claim Approval</h2>
<p class="lead">Claims approved by Coordinator - awaiting final approval</p>
<hr>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>No Claims for Final Approval</h4>
        <p>There are no claims awaiting final approval at this time.</p>
    </div>
}
else
{
    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Claims Awaiting Final Approval (@Model.Count)</h5>
        </div>
        <div class="card-body">
            @foreach (var claim in Model)
            {
                <div class="card mb-3 border-info">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0 text-dark">Claim #@claim.ClaimId - @claim.Lecturer?.FirstName @claim.Lecturer?.LastName</h6>
                            <div>
                                <span class="badge bg-info me-2">Coordinator Approved: @claim.CoordinatorApprovedDate?.ToString("dd MMM yyyy")</span>
                                <span class="badge bg-secondary">Submitted: @claim.SubmittedDate.ToString("dd MMM yyyy")</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Period:</dt>
                                    <dd class="col-sm-8">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(claim.Month) @claim.Year</dd>

                                    <dt class="col-sm-4">Hours Worked:</dt>
                                    <dd class="col-sm-8">@claim.HoursWorked hours</dd>

                                    <dt class="col-sm-4">Hourly Rate:</dt>
                                    <dd class="col-sm-8">@claim.HourlyRate.ToString("C")</dd>

                                    <dt class="col-sm-4">Total Amount:</dt>
                                    <dd class="col-sm-8"><strong>@claim.TotalAmount.ToString("C")</strong></dd>

                                    <dt class="col-sm-4">Coordinator:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge bg-success">Approved</span>
                                        on @claim.CoordinatorApprovedDate?.ToString("dd MMM yyyy HH:mm")
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(claim.Notes))
                                {
                                    <dt>Lecturer Notes:</dt>
                                    <dd class="mb-2">@claim.Notes</dd>
                                }

                                @if (!string.IsNullOrEmpty(claim.FileName))
                                {
                                    <dt>Supporting Document:</dt>
                                    <dd class="mb-2">
                                        <a href="@Url.Action("DownloadDocument", "Claims", new { id = claim.ClaimId })"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-download"></i> @claim.FileName
                                        </a>
                                    </dd>
                                }

                                <!-- Status History -->
                                @if (claim.StatusHistory.Any())
                                {
                                    <dt>Status History:</dt>
                                    <dd>
                                        <div class="small">
                                            @foreach (var history in claim.StatusHistory.OrderBy(h => h.ActionDate))
                                            {
                                                <div class="mb-1">
                                                    <span class="badge @GetHistoryBadgeClass(history.Status)">@history.Status</span>
                                                    by @history.ActionBy on @history.ActionDate.ToString("dd MMM HH:mm")
                                                    @if (!string.IsNullOrEmpty(history.Notes))
                                                    {
                                                        <br>
                                    
                                                        <em>@history.Notes</em>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </dd>
                                }

                                <dt class="mt-2">Final Actions:</dt>
                                <dd>
                                    <div class="btn-group" role="group">
                                        <form method="post" action="@Url.Action("FinalApproveClaim", "Claims")" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@claim.ClaimId" />
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-check-double"></i> Final Approve
                                            </button>
                                        </form>

                                        <button type="button" class="btn btn-danger btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#rejectModal@(claim.ClaimId)">
                                            <i class="fas fa-times"></i> Reject
                                        </button>

                                        <a href="@Url.Action("ClaimDetails", "Claims", new { id = claim.ClaimId })"
                                           class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> Full Details
                                        </a>
                                    </div>
                                </dd>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reject Modal for each claim -->
                <div class="modal fade" id="rejectModal@(claim.ClaimId)" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Reject Claim #@claim.ClaimId</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <form method="post" action="@Url.Action("FinalRejectClaim", "Claims")">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@claim.ClaimId" />
                                <div class="modal-body">
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        <strong>Warning:</strong> This will reject a claim that was already approved by the Coordinator.
                                    </div>
                                    <div class="mb-3">
                                        <label for="rejectNotes@(claim.ClaimId)" class="form-label">Rejection Reason *</label>
                                        <textarea name="notes" id="rejectNotes@(claim.ClaimId)" class="form-control"
                                          rows="4" placeholder="Please provide a detailed reason for rejecting this previously approved claim..." required></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Reject Claim</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

<div class="mt-3">
    <a href="@Url.Action("Dashboard", "Home")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>

@functions {
    public string GetHistoryBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "ApprovedByCoordinator" => "bg-info",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
