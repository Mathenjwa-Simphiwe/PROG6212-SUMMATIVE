<!-- Views/Claims/SubmitClaim.cshtml -->
@model Claim

<h2>Submit Monthly Claim</h2>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="SubmitClaim" method="post" enctype="multipart/form-data" id="claimForm">
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Claim Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Month" class="form-label">Month *</label>
                                <select asp-for="Month" class="form-control" required>
                                    <option value="">Select Month</option>
                                    @for (int i = 1; i <= 12; i++)
                                    {
                                        <option value="@i">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                                    }
                                </select>
                                <span asp-validation-for="Month" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Year" class="form-label">Year *</label>
                                <input asp-for="Year" class="form-control" value="@DateTime.Now.Year" required />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HoursWorked" class="form-label">Hours Worked *</label>
                        <input asp-for="HoursWorked" class="form-control" id="hoursWorked"
                               type="number" step="0.5" min="0.5" max="180" required />
                        <small class="form-text text-muted">Maximum 180 hours per month</small>
                        <span asp-validation-for="HoursWorked" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Hourly Rate</label>
                        <input type="text" class="form-control" value="@ViewBag.HourlyRate.ToString("C")" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Total Amount</label>
                        <input type="text" class="form-control" id="totalAmount" readonly />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Additional Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="4"
                                  placeholder="Add any additional notes or comments..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Supporting Document</label>
                        <input type="file" name="supportingDocument" class="form-control"
                               accept=".pdf,.docx,.xlsx,.jpg,.png" />
                        <small class="form-text text-muted">
                            Allowed formats: PDF, DOCX, XLSX, JPG, PNG (Max 5MB)
                        </small>
                        <div id="filePreview" class="mt-2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success btn-lg">
            <i class="fas fa-paper-plane"></i> Submit Claim
        </button>
        <a href="@Url.Action("MyClaims")" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            var hourlyRate = @ViewBag.HourlyRate;

            function calculateTotal() {
                var hours = parseFloat($('#hoursWorked').val()) || 0;
                var total = hours * hourlyRate;
                $('#totalAmount').val('R ' + total.toFixed(2));

                // Validation
                if (hours > 180) {
                    $('#hoursWorked').addClass('is-invalid');
                    $('.hours-error').remove();
                    $('#hoursWorked').after('<div class="invalid-feedback hours-error">Hours worked cannot exceed 180 hours per month.</div>');
                } else if (hours <= 0) {
                    $('#hoursWorked').addClass('is-invalid');
                    $('.hours-error').remove();
                    $('#hoursWorked').after('<div class="invalid-feedback hours-error">Hours worked must be greater than 0.</div>');
                } else {
                    $('#hoursWorked').removeClass('is-invalid');
                    $('.hours-error').remove();
                }
            }

            $('#hoursWorked').on('input', calculateTotal);
            calculateTotal(); // Initial calculation

            // File preview
            $('input[type="file"]').on('change', function(e) {
                var file = e.target.files[0];
                if (file) {
                    $('#filePreview').html(
                        '<div class="alert alert-info">' +
                        '<strong>Selected file:</strong> ' + file.name + ' (' + (file.size / 1024 / 1024).toFixed(2) + ' MB)' +
                        '</div>'
                    );
                }
            });

            // Form submission validation
            $('#claimForm').on('submit', function(e) {
                var hours = parseFloat($('#hoursWorked').val()) || 0;
                if (hours > 180 || hours <= 0) {
                    e.preventDefault();
                    alert('Please fix validation errors before submitting.');
                }
            });
        });
    </script>
}