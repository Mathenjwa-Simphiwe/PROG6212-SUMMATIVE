<!-- Views/Claims/MyClaims.cshtml -->
@model List<Claim>

<h2>My Claims</h2>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>No claims submitted yet</h4>
        <p>You haven't submitted any claims. <a href="@Url.Action("SubmitClaim")" class="alert-link">Submit your first claim</a> to get started.</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Period</th>
                    <th>Hours</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Submitted</th>
                    <th>Document</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(claim.Month) @claim.Year</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.TotalAmount.ToString("C")</td>
                        <td>
                            <span class="badge @GetStatusBadgeClass(claim.Status)">
                                @GetStatusDisplayText(claim.Status)
                            </span>
                        </td>
                        <td>@claim.SubmittedDate.ToString("dd MMM yyyy")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.FileName))
                            {
                                <a href="@Url.Action("DownloadDocument", new { id = claim.ClaimId })"
                                   class="btn btn-sm btn-outline-primary" title="Download @claim.FileName">
                                    <i class="fas fa-download"></i> Document
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No document</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("ClaimDetails", new { id = claim.ClaimId })"
                               class="btn btn-sm btn-info" title="View Details">
                                <i class="fas fa-eye"></i> Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "ApprovedByCoordinator" => "bg-info",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string GetStatusDisplayText(string status)
    {
        return status switch
        {
            "Pending" => "Pending Coordinator Review",
            "ApprovedByCoordinator" => "Approved by Coordinator",
            "Approved" => "Approved",
            "Rejected" => "Rejected",
            _ => status
        };
    }
}
